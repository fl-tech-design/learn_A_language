<Pop_Info@Popup>:
    auto_dismiss: False
    size_hint: (0.8, 0.5)
    background_color: fs22_n
    title_size: '23sp'
    title_font: constants.DIR_FONTS + "cmunobx.ttf"
    title_color: fs22_n
    separator_color: fs22_d
    separator_height: '4dp'
    BoxUnlined:
        id: box
        orientation: 'vertical'
        padding: [2, 2]  # Extra padding for the box layout
        spacing: 4
        BoxLined_1:
            ScrollView:
                size_hint: (1, 1)  # Nimmt den gesamten verfügbaren Platz ein
                bar_width: 10  # Breite der Scrollbar (optional)
                do_scroll_x: False  # Kein horizontaler Scroll
                do_scroll_y: True  # Vertikaler Scroll aktivieren
                Label:
                    id: text_label
                    text_size: self.width - 8, None  # Textgröße anpassen
                    font_size: "21sp"
                    padding: [4, 4]  # Padding um den Text
                    size_hint_y: None
                    height: self.texture_size[1]  # Höhe an den Text anpassen
                    halign: 'center'
        BoxLined_2:
            size_hint_y: 0.15
            padding: 0
            ButClear:
                id: but_close_popup
                font_size: self.height * 0.7
                on_release: root.close_Popup()
